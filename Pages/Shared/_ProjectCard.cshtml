@using petrine.no.Models
@model ProjectViewModel


<div
    class="max-w-xs sm:max-w-md md:max-w-lg lg:max-w-xl m-4 bg-white bg-opacity-75 shadow-lg rounded-lg overflow-hidden transition-transform transform hover:scale-105">
    <img src="https://via.placeholder.com/400x300" alt="Placeholder" class="w-full h-48 rounded-lg object-cover mb-4">
    <div class="p-4">
        <h1 class="text-xl sm:text-2xl font-semibold mb-2">
            <a href="@Model.Url" class="text-gray-800 hover:text-gray-900">@Model.Name</a>
        </h1>
        <p class="text-gray-600 mb-4 text-sm sm:text-base">@Model.Description</p>
        <p class="text-gray-500 mb-4 text-sm sm:text-base">Her kan du legge til en setning som tekst.</p>

        <a href="@Model.Url" target="_blank"
            class="mt-4 inline-flex items-center bg-blue-600 hover:bg-blue-700 text-white font-semibold py-2 px-4 rounded-lg shadow-lg transition duration-200">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none"
                stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="mr-2">
                <path stroke="none" d="M0 0h24v24H0z" fill="none" />
                <path
                    d="M9 19c-4.3 1.4 -4.3 -2.5 -6 -3m12 5v-3.5c0 -1 .1 -1.4 -.5 -2c2.8 -.3 5.5 -1.4 5.5 -6a4.6 4.6 0 0 0 -1.3 -3.2a4.2 4.2 0 0 0 -.1 -3.2s-1.1 -.3 -3.5 1.3a12.3 12.3 0 0 0 -6.2 0c-2.4 -1.6 -3.5 -1.3 -3.5 -1.3a4.2 4.2 0 0 0 -.1 3.2a4.6 4.6 0 0 0 -1.3 3.2c0 4.6 2.7 5.7 5.5 6c-.6 .6 -.6 1.2 -.5 2v3.5" />
            </svg>
            <span class="text-sm">View on GitHub</span>
        </a>
    </div>
</div>