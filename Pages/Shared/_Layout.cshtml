<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Petrine.no</title>

    <!-- Tailwind CSS -->
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="~/css/output.css" asp-append-version="true" />
</head>

<body class="bg-gray-100 text-gray-800">
    <!-- Navigation -->
    <nav class="bg-gray-800 p-4" aria-label="Main Navigation">
        <div class="container mx-auto flex justify-between items-center">
            <a href="/" class="text-white font-bold text-lg">Petrine.no</a>
            <div class="space-x-4">
                <a href="/" class="text-white hover:text-gray-400">Home</a>
                <a href="/portfolio" class="text-white hover:text-gray-400">Portfolio</a>
                <a href="/blog" class="text-white hover:text-gray-400">Blog</a>
                <a href="/about" class="text-white hover:text-gray-400">About</a>
                <a href="/contact" class="text-white hover:text-gray-400">Contact</a>
            </div>
        </div>
    </nav>

    <!-- Display Hero Section only on Home Page -->
    @if ((ViewContext.RouteData.Values["Page"] as string)?.Equals("/Index", StringComparison.OrdinalIgnoreCase) == true)
    {
        <header class="relative bg-cover bg-center h-96"
            style="background-image: url('@(ViewData["HeroImageUrl"]?.ToString() ?? "https://via.placeholder.com/1920x600")');">
            <div class="absolute inset-0 bg-black opacity-40"></div>
            <div class="relative z-10 flex flex-col items-center justify-center h-full text-center text-white">
                <h1 class="text-4xl font-bold">@ViewData["HeroTitle"]?.ToString() ?? "Welcome to Petrine.no!"</h1>
                <p class="text-lg mt-2">@ViewData["HeroSubtitle"]?.ToString() ?? "Explore our projects and blog."</p>
                <a href="#main-content" class="mt-4 px-6 py-2 bg-blue-600 text-white rounded-lg">Learn More</a>
            </div>
        </header>
    }

    <!-- Main Content -->
    <main id="main-content" class="p-6">
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer class="bg-gray-800 text-white p-4" aria-label="Footer">
        <div class="container mx-auto text-center">
            <p>&copy; 2024 Petrine.no. All rights reserved.</p>
        </div>
    </footer>

    <script src="~/js/site.js" asp-append-version="true"></script>
</body>

</html>