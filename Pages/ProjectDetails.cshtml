@page "{repoName}"
@model ProjectDetailsModel
@{
    ViewData["Title"] = Model.Project?.Name ?? "Project Details";
}

<section class="p-4 max-w-4xl mx-auto">
    <!-- Large project image -->
    <div class="mb-6">
        <img src="https://via.placeholder.com/1000x500" alt="Project image"
            class="w-full h-64 sm:h-96 md:h-[500px] object-cover rounded-lg shadow-lg">
    </div>

    <!-- Project title and link to homepage -->
    <h1 class="text-2xl font-bold text-gray-800 text-center mb-4 md:text-3xl md:text-left">
        @Model.Project?.Name ?? "Untitled Project"
    </h1>

    <div class="flex flex-col gap-4 items-center md:flex-row md:justify-between md:items-center mb-8">
        <!-- URL link to project's homepage -->
        @if (!string.IsNullOrEmpty(Model.Project?.Url))
        {
            <a href="@Model.Project.Url" target="_blank" class="text-blue-600 hover:underline text-center md:text-left">
                Visit Project Homepage
            </a>
        }
        else
        {
            <p class="text-gray-600">No project URL available</p>
        }

        <!-- Enlarged GitHub icon linking to repository, only if URL is available -->
        @if (!string.IsNullOrEmpty(Model.Project?.Url))
        {
            <a href="@Model.Project.Url" target="_blank"
                class="flex items-center justify-center text-gray-800 hover:text-blue-600 transition-transform transform hover:scale-110">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" width="36" height="36" fill="currentColor">
                    <path
                        d="M12 .297c-6.63 0-12 5.373-12 12 0 5.302 3.438 9.8 8.205 11.387.6.113.82-.258.82-.577 0-.285-.01-1.04-.015-2.04-3.338.726-4.042-1.416-4.042-1.416-.546-1.387-1.333-1.757-1.333-1.757-1.086-.744.084-.729.084-.729 1.205.084 1.838 1.236 1.838 1.236 1.068 1.832 2.8 1.303 3.487.998.108-.775.418-1.303.76-1.603-2.665-.3-5.466-1.332-5.466-5.93 0-1.31.47-2.382 1.236-3.22-.124-.302-.535-1.521.117-3.176 0 0 1.008-.322 3.3 1.23a11.53 11.53 0 013.004-.404c1.018.004 2.042.137 3.004.404 2.292-1.553 3.3-1.23 3.3-1.23.653 1.655.242 2.874.118 3.176.768.838 1.236 1.91 1.236 3.22 0 4.61-2.803 5.625-5.475 5.92.43.372.823 1.102.823 2.222 0 1.605-.015 2.896-.015 3.286 0 .319.22.694.825.576C20.565 22.092 24 17.592 24 12.297 24 5.67 18.627.297 12 .297z" />
                </svg>
            </a>
        }
    </div>

    <!-- Project overview -->
    <p class="text-base text-gray-700 mb-6">@Model.Project?.Summary ?? "No summary available."</p>

    <!-- Section 1: Planning Process -->
    <div class="mb-10">
        <h2 class="text-xl font-semibold text-gray-800 mb-4 md:text-2xl">Planning Process</h2>
        <img src="https://via.placeholder.com/600x300" alt="Planning process"
            class="w-full h-48 object-cover rounded-lg shadow-md mb-4">
        <p class="text-gray-600 text-sm md:text-base">This section covers the project's initial planning, goals, and
            strategic direction.</p>
    </div>

    <!-- Section 2: Design and Prototyping -->
    <div class="mb-10">
        <h2 class="text-xl font-semibold text-gray-800 mb-4 md:text-2xl">Design and Prototyping</h2>
        <img src="https://via.placeholder.com/600x300" alt="Design and prototyping"
            class="w-full h-48 object-cover rounded-lg shadow-md mb-4">
        <p class="text-gray-600 text-sm md:text-base">This part describes the design phase, including wireframing,
            prototyping, and user experience design.</p>
    </div>

    <!-- Section 3: Development and Technologies -->
    <div class="mb-10">
        <h2 class="text-xl font-semibold text-gray-800 mb-4 md:text-2xl">Development and Technologies</h2>
        <img src="https://via.placeholder.com/600x300" alt="Development process"
            class="w-full h-48 object-cover rounded-lg shadow-md mb-4">
        <p class="text-gray-600 text-sm md:text-base">Detailed breakdown of technologies used and the development
            process for building the project.</p>
    </div>

    <!-- Section 4: Testing and Optimization -->
    <div class="mb-10">
        <h2 class="text-xl font-semibold text-gray-800 mb-4 md:text-2xl">Testing and Optimization</h2>
        <img src="https://via.placeholder.com/600x300" alt="Testing and optimization"
            class="w-full h-48 object-cover rounded-lg shadow-md mb-4">
        <p class="text-gray-600 text-sm md:text-base">How the project was tested, including performance optimization,
            bug fixing, and quality assurance.</p>
    </div>

    <!-- Section 5: Final Outcome and Analysis -->
    <div class="mb-10">
        <h2 class="text-xl font-semibold text-gray-800 mb-4 md:text-2xl">Final Outcome and Analysis</h2>
        <img src="https://via.placeholder.com/600x300" alt="Final outcome"
            class="w-full h-48 object-cover rounded-lg shadow-md mb-4">
        <p class="text-gray-600 text-sm md:text-base">Summary of the project's final result, analysis of its impact, and
            key takeaways.</p>
    </div>
</section>