@page
@model IndexModel
@{
    ViewData["Title"] = "Home";
}

<section class="p-6">
    <h2 class="text-2xl font-semibold">Latest Projects</h2>
    <div id="latestProjects" class="grid grid-cols-1 md:grid-cols-3 gap-4 mt-4">
        @foreach (var project in Model.LatestProjects)
        {
            @await Html.PartialAsync("_ProjectCard", project)
        }
    </div>
</section>