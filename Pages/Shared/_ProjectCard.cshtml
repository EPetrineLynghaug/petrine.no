@model petrine.no.ViewModels.ProjectViewModel

<div
    class="bg-white shadow-lg rounded-lg overflow-hidden transition-transform transform hover:scale-105 max-w-sm w-full mx-auto">
    <div class="rounded-lg overflow-hidden bg-white p-1 shadow-sm">
        <img src="@Model.ProjectCardImageUrl" alt="@Model.Name" class="w-full h-48 object-cover rounded-lg" />
    </div>

    <div class="p-4">
        <h1 class="text-lg font-semibold text-gray-800 mb-1">
            <a href="/ProjectDetails/@Uri.EscapeDataString(Model.Name)" class="hover:text-blue-600">
                @Model.Name
            </a>
        </h1>
        <p class="text-gray-600 text-sm">Side Project</p>
    </div>
</div>