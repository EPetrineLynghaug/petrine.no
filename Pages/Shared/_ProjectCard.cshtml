@model petrine.no.ViewModels.ProjectViewModel

<div
    class="bg-white shadow-lg rounded-lg overflow-hidden transform transition-transform hover:scale-105 max-w-sm w-full p-4">
    <!-- Bilde seksjon -->
    <div class="mb-4">
        <img src="@Model.HeroImageUrl" alt="@Model.Name" class="w-full h-48 object-cover rounded-lg shadow-md">
    </div>

    <!-- Innhold seksjon -->
    <div class="flex flex-col justify-between h-full">
        <!-- Tittel og lenke til detaljsiden -->
        <h1 class="text-xl font-semibold text-gray-800 mb-2">
            <a href="/ProjectDetails/@Model.Name" class="hover:text-blue-600">@Model.Name</a>
        </h1>

        <!-- Kort beskrivelse -->
        <p class="text-gray-600">@Model.Description</p>
    </div>
</div>
