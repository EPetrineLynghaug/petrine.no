@model petrine.no.ViewModels.ProjectViewModel

<div
    class="bg-white shadow-lg rounded-2xl overflow-hidden transform transition-transform hover:scale-105 max-w-sm w-full p-4">
    <!-- Image Section -->
    <div class="mb-4">
        <img src="@Model.HeroImageUrl" alt="@Model.Name"
            class="w-full h-48 object-cover rounded-xl border-4 border-white shadow-md">
    </div>

    <!-- Content Section -->
    <div class="flex flex-col justify-between h-full">
        <!-- Title and GitHub Icon Row -->
        <div class="flex items-center justify-between mb-2">
            <h1 class="text-xl font-semibold text-gray-800">
                <a href="/ProjectDetails/@Model.Name" class="hover:text-blue-600">@Model.Name</a>
            </h1>
            <!-- GitHub Button -->
            <a href="@Model.Url" target="_blank"
                class="flex items-center justify-center bg-gray-800 text-white rounded-full p-2 hover:bg-gray-700 transition-colors">
